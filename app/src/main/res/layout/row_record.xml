    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/view"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:background="@color/app_color" />

        <TextView
            android:id="@+id/nameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/view"
            android:text="Place"
            android:textColor="#000000"
            android:fontFamily="@font/mulish_semibold"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/numberLl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nameTv"
            android:layout_alignStart="@+id/nameTv"
            android:layout_toStartOf="@+id/imgEdit"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/phoneTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="10dp"
                android:drawablePadding="5dp"
                android:text="Manager Number"
                android:textSize="13sp"
                android:textStyle="bold" />

            <TextView

                android:id="@+id/dateTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:drawablePadding="5dp"
                android:text="Date"
                android:textSize="13sp"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:id="@+id/ticketTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/numberLl"
            android:layout_alignStart="@+id/nameTv"
            android:layout_marginEnd="10dp"
            android:drawablePadding="5dp"
            android:text="ðŸŽ« Ticket Number"
            android:textSize="12sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imgDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginVertical="10dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_delete"
            app:tint="@color/app_color" />

        <ImageView
            android:id="@+id/imgEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgDelete"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_edit"
            app:tint="@color/app_color" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>